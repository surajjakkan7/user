<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="#FFFFFF"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/order_package_img"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/order_package_name"
            android:layout_toRightOf="@id/order_package_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Hanuman Chak,Gangtok"
            android:textColor="#6e6c6c"
            android:textSize="15sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/order_view3"
            android:layout_below="@id/order_package_name"
            android:layout_toRightOf="@id/order_package_img"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/order_package_time"
            android:layout_below="@id/order_view3"
            android:layout_toRightOf="@id/order_package_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Fri, Feb 16, 08:40 PM" />

        <View
            android:id="@+id/order_view4"
            android:layout_below="@id/order_package_time"
            android:layout_toRightOf="@id/order_package_img"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/order_package_id"
            android:layout_toRightOf="@id/order_package_img"
            android:layout_below="@id/order_view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Ticket Id : "
            />
        <TextView
            android:id="@+id/order_package_idno"
            android:layout_toRightOf="@id/order_package_id"
            android:layout_below="@id/order_view4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="7676876876"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>